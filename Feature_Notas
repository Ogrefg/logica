<?php

//feature Notas

$nota1 = 9;
$nota2 = 2;
$nota3 = 6;
$nota4 = 8;

$aluno = "João";

$media = ($nota1 + $nota2 + $nota3 + $nota4) / 4;

if ($media >=8) {
    echo "O aluno $aluno foi aprovado com média $media";
} else if ($media >= 6 && $media < 8) {
    echo "O aluno $aluno está de recuperação com média $media";
} else {
    echo "O aluno $aluno foi reprovado com média $media";
};
